<!DOCTYPE html>
<html lang="en">
<%- include('partials/_header') %>

	<body class="host_version">



		<!-- Start header -->
		<%- include('partials/_nav') %>
			<!-- End header -->

			<div class="all-title-box">
				<div class="container text-center">
					<h1>
						<%= course.name %>
					</h1>
				</div>
			</div>

			<div id="overviews" class="section wb">
				<div class="container">
					<div class="row">
						<div class="col-lg-9 blog-post-single">
							<div class="blog-item">
								<div class="image-blog">
									<img src="/images/blog_single.jpg" alt="" class="img-fluid">
								</div>
								<div class="post-content">

									<% if (user && !(user.courses.includes(course._id))) { %>
										<div class="post-date">
											<form action="/courses/enroll" method="post">
												<button class="btn btn-lg btn-warning text-white">
													<input type="hidden" name="course_id" value="<%= course._id %>">
													<span>ENROLL</span>
												</button>

											</form>
										</div>
										<% } %>
											<div class="meta-info-blog">
												<span><i class="fa fa-calendar"></i> <a href="#">May 11, 2015</a>
												</span>
											</div>
											<div class="blog-title">
												<h2><a href="#" title="">
														<%= course.name %>
													</a></h2>
											</div>
											<div class="blog-desc">
												<p>
													<%= course.description %>
												</p>

											</div>
								</div>
							</div>

							<div class="blog-author">
								<div class="author-bio">
									<h3 class="author_name"><a href="#">
											<%= course.user.name %>
										</a></h3>
									<h5>
										<%= course.user.role %>
									</h5>

								</div>
								<div class="author-desc">
									<img src="/images/author.jpg" alt="about author">
									<ul class="author-social">
										<li><a href="#"><i class="fa fa-facebook"></i></a></li>
										<li><a href="#"><i class="fa fa-twitter"></i></a></li>
										<li><a href="#"><i class="fa fa-skype"></i></a></li>
									</ul>
								</div>
							</div>

						</div><!-- end col -->
						<div class="col-lg-3 col-12 right-single">
							<div class="widget-search">
								<div class="site-search-area">
									<form method="get" id="site-searchform" action="/courses">
										<div>
											<input class="input-text form-control" name="search" id="search"
												placeholder="Search" type="text">
											<button id="searchsubmit" value="Search" type="submit"></button>
										</div>
									</form>
								</div>
							</div>
							<div class="widget-categories">
								<h3 class="widget-title">Categories</h3>
						<ul>
							<% for(let j = 0 ; j < categories.length; j++) { %>
							<li><a href="/courses?category=<%= categories[j].slug %>"><%= categories[j].name %></a></li>
							<% } %>
						</ul>
							</div>
						</div>
					</div><!-- end row -->
				</div><!-- end container -->
			</div><!-- end section -->

			<%- include('partials/_footer') %>

				<div class="copyrights">
					<div class="container">
						<div class="footer-distributed">
							<div class="footer-center">
								<p class="footer-company-name">All Rights Reserved. &copy; 2018 <a href="#">SmartEDU</a>
									Design By : <a href="https://html.design/">html design</a></p>
							</div>
						</div>
					</div><!-- end container -->
				</div><!-- end copyrights -->

				<a href="#" id="scroll-to-top" class="dmtop global-radius"><i class="fa fa-angle-up"></i></a>

				<!-- ALL JS FILES -->
				<script src="js/all.js"></script>
				<!-- ALL PLUGINS -->
				<script src="js/custom.js"></script>

	</body>

</html>